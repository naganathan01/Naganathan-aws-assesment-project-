{
  "name": "hello-world-app",
  "version": "1.0.0",
  "description": "AWS DevOps Hello World Application",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "test": "NODE_ENV=test jest --coverage --forceExit --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write 'src/**/*.{js,json}'",
    "pre-commit": "npm run lint && npm run test",
    "docker:build": "docker build -t hello-world-app .",
    "docker:run": "docker run -p 3000:3000 hello-world-app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/aws-devops-project.git"
  },
  "keywords": [
    "aws",
    "devops",
    "kubernetes",
    "docker",
    "node"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "aws-sdk": "^2.1400.0",
    "winston": "^3.9.0",
    "prom-client": "^14.2.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "@types/jest": "^29.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}